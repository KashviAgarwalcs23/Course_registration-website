<link rel="shortcut icon" href="https://as1.ftcdn.net/v2/jpg/02/22/15/10/1000_F_222151012_kiiItUsujiyauZlOTIKfeldhSymiJViu.jpg" > .
  <style>
    /* General Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      background-color: #ecf0f1;  /* Soft light gray */
      margin: 0;
      height: 100vh; /* Ensure full viewport height */
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    /* Top Bar / Notification Bar Styling */
    .notification-bar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background-color: #16a085;  /* Soft teal */
      color: white;
      text-align: center;
      padding: 15px;
      font-size: 18px;
      font-weight: bold;
      display: none;  /* Initially hidden */
      opacity: 0;  /* Make it invisible initially */
      transition: opacity 1s ease, top 1s ease;  /* Smooth fade-in and slide-down */
      z-index: 1000;  /* Ensure it's on top of other elements */
    }

    /* Header Styling */
    header {
      background-color: #2c3e50;  /* Dark gray for header */
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      z-index: 1;  /* Keeps header on top */
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      width: 100%;
    }

    /* Website Name */
    .website-name {
      font-family: 'Roboto', sans-serif;
      color: white;
      font-size: 36px;
      font-weight: 700;
    }

    /* Navbar Links */
    .navbar {
      display: flex;
    }

    .navbar ul {
      list-style: none;
      display: flex;
    }

    .navbar li {
      margin-left: 20px;
    }

    .navbar a {
      color: white;
      text-decoration: none;
      font-size: 16px;
      font-weight: bold;
      padding: 8px 12px;
      transition: background-color 0.3s ease;
    }

    .navbar a:hover {
      background-color: #27ae60;  /* Soft green for hover */
      border-radius: 4px;
    }

    /* Content Section with Background Image */
    .content-section {
      width: 100%;
      min-height: 500px; /* Adjust height based on your content */
      background-image: url('https://cdn.prod.website-files.com/64760069e93084646c9ee428/649ef6799df88b07dbece820_code-html-vs-css%20(1)-p-1600.jpg');
      background-size: cover; /* Make the image cover the section */
      background-position: center center; /* Center the image */
      background-repeat: no-repeat; /* Prevent the image from repeating */
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 50px 0;
      color: white;
      margin-top: 80px; /* Ensure it appears below the fixed header */
    }

    .content-section p {
      font-size: 24px;
      font-weight: 600;
    }

    .content-section button {
      background-color: #f39c12;  /* Bright orange for buttons */
      color: white;
      font-size: 16px;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .content-section button:hover {
      background-color: #e67e22;  /* Slightly darker orange for hover */
    }

    /* Central Message Styling */
    .central-message {
      text-align: center;
      opacity: 0;
      transition: opacity 2s ease-in-out;  /* Smooth fade-in effect */
    }

    .central-message h1 {
      font-family: 'Roboto', sans-serif;
      color: #e74c3c;  /* Bold red for title */
      font-size: 48px;
      font-weight: 700;
    }

    .central-message p {
      font-family: 'Open Sans', sans-serif;
      color: #7f8c8d;  /* Neutral grayish color for subtitle */
      font-size: 22px;
      font-weight: 300;
      margin-top: 10px;
      max-width: 600px;
      margin: 10px auto;
    }

    /* Section Below the Fold */
    .below-fold {
      width: 100%;
      min-height: 500px;
      background-color: #ffffff;  /* White background for this section */
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 50px 0;
    }

    /* About Us Section */
    .about-us {
      width: 100%;
      display: flex;
      justify-content: space-around;
      align-items: flex-start; /* Align items at the start */
      padding: 50px 20px;
      background-color: #f4f4f4;  /* Light gray background */
    }

    .about-us .text {
      width: 50%;
      text-align: left;
      padding-left: 20px;
    }

    .about-us img {
      width: 30%;  /* Adjust image size */
      margin-right: 40px;
      border-radius: 8px;  /* Rounded corners for the image */
    }

    .about-us h2 {
      color: #2c3e50;  /* Dark gray title */
      font-size: 32px;
      font-weight: 600;
    }

    .about-us p {
      font-family: 'Open Sans', sans-serif;
      color: #7f8c8d;  /* Neutral grayish color */
      font-size: 18px;
      line-height: 1.6;
      margin-top: 15px;
    }

    .about-us .highlight {
      font-weight: bold;
      color: #e74c3c;  /* Highlighted text in red */
    }

  </style>
</head>
<body>

  <!-- Notification Bar (Welcome Message) -->
